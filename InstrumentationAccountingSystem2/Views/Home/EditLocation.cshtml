@model InstrumentationAccountingSystem2.Models.Location

<div>
    <h5>Изменить место установки</h5>
    <form asp-action="EditLocation" asp-controller="home" asp-route-id="@Model">
        <div hidden>
            <label asp-for="Id">Id</label><br />
            <input type="text" asp-for="Id" value="@Model.Id" />
            <span asp-validation-for="Id"></span>
        </div>
        <div>
            <label asp-for="Name">Name</label><br />
            <input type="text" asp-for="Name" value="@Model.Name" />
            <span asp-validation-for="Name"></span>
        </div>
        <div>
            <input type="submit" value="Изменить" />
        </div>
    </form>
    <form asp-controller="Home" asp-action="DeleteLocationById" method="post" asp-route-id="@Model.Id">
        <input type="submit" onclick="return confirm('Вы уверены, что хотите удалить это место?');" value="Удалить место" style="color:red" />
    </form>
</div>